@model IEnumerable<BotByePOC.Models.PolicyLocation>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PolicyID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LocationNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LocationDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LocationAddress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LocationCity)
                </th>
