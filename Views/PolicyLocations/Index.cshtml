        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PolicyID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationState)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationZip)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PolicyLocationID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PolicyLocationID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PolicyLocationID">Delete</a>
